---
import ColorBar from "../../components/ColorBar.astro";
import Container from "../../components/Container.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import NavigationClick from "../../components/NavigationClick.astro";
import SmileyFace from "../../components/icons/SmileyFace.astro";
import SmileyFlower from "../../components/icons/SmileyFlower.astro";

const BG_COLOR = "bg-[#253450]";
---

<Layout title="September Photos">
  <NavigationClick previous="/october" next="/november" />
  <Container>
    <Header title="OCTUBRE" titleColor="text-[#0F141A]" color={BG_COLOR} />

    <section
      class="grid grid-cols-1 grid-rows-[170px_210px_1fr] justify-items-center"
    >
      <div class="-ml-28 relative">
        <SmileyFlower
          class="absolute top-20 -right-14 animate-fade"
          style="animation-delay: 2.8s; animation-fill-mode: both;"
        />
        <img
          class="animate-fadeRight"
          src="images/october/Group 35.png"
          alt="group 35"
          style="animation-delay: 0.5s; animation-fill-mode: both;"
        />
      </div>
      <img
        class="-mr-28 animate-fadeLeft"
        src="images/october/Group 36.png"
        alt="group 36"
        style="animation-delay: 1s; animation-fill-mode: both;"
      />
      <div class="-ml-28 relative">
        <img
          class="animate-fadeUp"
          src="images/october/Group 37.png"
          alt="group 37"
          style="animation-delay: 1.5s; animation-fill-mode: both;"
        />
        <ColorBar
          class="w-[160px] h-auto text-center py-2 absolute top-5 -right-36 z-20 animate-fade"
          color={BG_COLOR}
          style="animation-delay: 2s; animation-fill-mode: both;"
        >
          <p class="font-light text-xl text-[#EEEEEE]">Caf√© sin leche</p>
        </ColorBar>
        <SmileyFace
          class="absolute bottom-10 -right-20 animate-fade"
          style="animation-delay: 2.5s; animation-fill-mode: both;"
        />
      </div>
    </section>
  </Container>
</Layout>
