---
import ColorBar from "../../components/ColorBar.astro";
import FirstHeart from "../../components/icons/FirstHeart.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import NavigationClick from "../../components/NavigationClick.astro";
import SecondHeart from "../../components/icons/SecondHeart.astro";
import ThirdHeart from "../../components/icons/ThirdHeart.astro";
import Container from "../../components/Container.astro";
---

<Layout title="Januar Photos">
  <NavigationClick previous="/january" next="/february" />
  <Container>
    <Header title="ENERO" color="bg-[#BFD5BA]" />

    <section
      class="grid grid-cols-1 grid-rows-[100px_200px_100px_1fr] justify-items-center relative"
    >
      <img
        class="-ml-32 animate-fadeRight"
        src="images/january/Group 13.png"
        alt="guy"
        style="animation-delay: 0.5s; animation-fill-mode: both;"
      />
      <div
        class="-mr-32 animate-fadeLeft relative"
        style="animation-delay: 1s; animation-fill-mode: both;"
      >
        <ColorBar
          class="h-[38px] w-[163px] animate-fadeDown absolute top-0 -mt-5 left-10"
          color="bg-[#BFD5BA]"
          style="animation-delay: 1.5s; animation-fill-mode: both;"
        >
          <p class="font-light text-[13px] text-center">
            We started the year apart, but accompaniend.
          </p>
        </ColorBar>
        <img class="w-full" src="images/january/Group 14.png" alt="girls" />
      </div>
      <img
        class="-ml-32 animate-fadeRight"
        src="images/january/Group 15.png"
        alt="group"
        style="animation-delay: 1.5s; animation-fill-mode: both;"
      />
      <img
        class="-mr-32 animate-fadeLeft"
        src="images/january/Group 16.png"
        alt="girl"
        style="animation-delay: 2s; animation-fill-mode: both;"
      />

      <div
        class="grid grid-cols-2 grid-rows-[30px_1fr] absolute bottom-14 left-14 animate-fadeUp"
      >
        <FirstHeart
          class="animate-fadeLeft"
          style="animation-delay: 2.5s; animation-fill-mode: both;"
        />
        <SecondHeart
          class="animate-fadeRight"
          style="animation-delay: 2.8s; animation-fill-mode: both;"
        />
        <ThirdHeart
          class="animate-fadeUp"
          style="animation-delay: 3s; animation-fill-mode: both;"
        />
      </div>
    </section>
  </Container>
</Layout>
