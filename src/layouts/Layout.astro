---
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="none" />
  </head>
  <body>
    <slot />
    <style is:global>
      @font-face {
        font-family: Sardonyx;
        src: url(fonts/Sardonyx.ttf) format(TrueType);
      }
      @font-face {
        font-family: Sansation;
        src: url(fonts/Sansation_Light.ttf) format(TrueType);
      }

      * {
        margin: 0;
        padding: 0;
        font-family: Sardonyx;
        color: #1a2f45;
      }

      h1 {
        font-weight: 400;
        line-height: 6rem;
      }

      p {
        font-family: Sansation;
      }

      .reveal-animation {
        animation: linear_reveal_both;
        animation-range: entry 5% cover 30% !important;
        animation-timeline: view();
      }

      @keyframes linear_reveal_both {
        from {
          opacity: 0;
          translate: 0 100px;
        }
        50% {
          opacity: 0.1;
        }
        to {
          opacity: 1;
          translate: 0 0;
        }
      }
    </style>
  </body>
</html>
